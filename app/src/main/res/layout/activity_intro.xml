<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2956A5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kakao_login_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="#F6E10A"
        android:drawableStart="@drawable/kakao_img_xml"
        android:padding="10dp"
        android:text="카카오톡으로 시작하기"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_login_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="ID로 시작하기" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="아이디를 잊으셨나요?  아이디 찾기 ㅣ 회원가입"
        android:textColor="#FFFFFF"/>


</LinearLayout>
