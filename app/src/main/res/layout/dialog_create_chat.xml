<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅방 만들기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />
    <!-- 이미지 placeholder -->
    <ImageView
        android:id="@+id/imagePlaceholder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_button_background"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 채팅방 이름 입력 -->
    <EditText
        android:id="@+id/editTextChatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="채팅방 이름을 입력해주세요"
        android:padding="12dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/imagePlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginBottom="16dp" />

    <!-- 인원 설정 텍스트 -->
    <TextView
        android:id="@+id/tv_ppl_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원 설정"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextChatName"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리더를 희망해요"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ppl_num"
        android:textSize="11sp"
        android:layout_marginTop="10dp"/>

    <!-- 인원 설정 입력 -->
    <EditText
        android:id="@+id/editPeopleNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="인원 설정(2~7)"
        android:background="@drawable/rounded_edittext_gray"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ppl_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/leader"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp" />

    <!-- 리더 희망 스위치 -->
    <Switch
        android:id="@+id/leader_toggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:thumbTint="@color/switch_thumb_color"
        android:trackTint="@color/switch_track_color"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editPeopleNum"
        app:layout_constraintTop_toBottomOf="@id/leader"/>
    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/editPeopleNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
