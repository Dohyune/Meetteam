<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 첫 번째 버튼 -->
    <ImageView
        android:id="@+id/btnUpcoming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_upcoming_schedule"
        android:scaleType="fitCenter"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/btnPast"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintHorizontal_weight="1"/>

    <!-- 두 번째 버튼 -->
    <ImageView
        android:id="@+id/btnPast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_past_schedule"
        android:scaleType="fitCenter"
    app:layout_constraintStart_toEndOf="@id/btnUpcoming"
    app:layout_constraintEnd_toStartOf="@id/btnEdit"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintHorizontal_weight="1"/>

    <!-- 세 번째 버튼 -->
    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_edit_schedule"
        android:scaleType="fitCenter"
    app:layout_constraintStart_toEndOf="@id/btnPast"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
