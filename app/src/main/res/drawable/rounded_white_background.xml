    <solid android:color="@android:color/white" />

    <!-- 위쪽 모서리만 둥글게 설정 -->
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />

    <!-- 패딩 설정 (선택 사항) -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
